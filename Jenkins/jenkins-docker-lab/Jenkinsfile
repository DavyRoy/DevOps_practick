pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        sh '''
          mkdir -p build
          echo "This is a build artifact." > build/output.txt
        '''
      }
    }
  }

  post {
    success {
      archiveArtifacts artifacts: 'build/output.txt', fingerprint: true
      echo 'Артефакт сохранён.'
    }
  }
}
